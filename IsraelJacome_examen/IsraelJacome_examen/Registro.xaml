<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsraelJacome_examen.Registro">
    <ContentPage.Content>
        <StackLayout>
            
            
            <Label Text="Esta es la ventana Registro" TextColor="Black" >

            </Label>
            <Label Text="Usuario conectado: " x:Name="lbluser">

            </Label>


            <Entry x:Name="txtNombre"
               Placeholder="Ingrese el nombre">

            </Entry>

            <Entry x:Name="txtMontoInicial"
               Placeholder="Ingrese el monto inicial a pagar">

            </Entry>

            <Label Text="Valor mensual a pagar: " x:Name="txtMensual">

            </Label>


            <Label Text="Total a pagar: " x:Name="txtPagoR">

            </Label>

            <Button x:Name="btnCalcular"
                    Text="Calcular"
                    Clicked="btnCalcular_Clicked">

            </Button>

            <Button x:Name="btnGuardar"
                    Text="Guardar"
                    Clicked="btnGuardar_Clicked">

            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>