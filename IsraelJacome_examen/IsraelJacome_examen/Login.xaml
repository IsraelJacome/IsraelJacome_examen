<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsraelJacome_examen.MainPage">

    <StackLayout>

        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
        <Label Text="Esta es la ventana de Login" TextColor="Black" >

            </Label>

            <Entry x:Name="txtUser"
               Placeholder="Ingrese el ususario">

            </Entry>

            <Entry x:Name="txtPass"
               Placeholder="Ingrese el password"
               IsPassword="True">

            </Entry>

        <Button x:Name="btnAbrirVentanaRegistro"
                Text="Registro"
                Clicked="btnAbrirVentanaRegistro_Clicked" >
        </Button>

    </StackLayout>

</ContentPage>
